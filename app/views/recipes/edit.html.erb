<h1>Edit the recipe for '<%= @recipe.name %>'</h1>

<% if @recipe.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<form action="/recipes/<%= @recipe.id %>" method="post">

  <input name="_method" type="hidden" value="patch">

  <label for="recipe_name">Name</label>
  <input id="recipe_name" name="name" type="text" value="<%= @recipe.name %>">

  <br><label for="recipe_ingredients">Ingredients:</label>
  <br><textarea name="ingredients" rows="10" cols="50"><%= @recipe.ingredients %></textarea>

  <br><label for="recipe_instructions">Instructions:</label>
  <br><textarea name="instructions" rows="10" cols="50"><%= @recipe.instructions %></textarea>
  <br>
  <button>Update recipe.</button>
</form>
